{
  "$schema": "character_parts_schema_v1.0",
  "version": "1.0.0",
  "description": "Character Generator Component System - Defines all available character parts and their properties",

  "metadata": {
    "tile_size": 32,
    "default_character_size": {
      "width": 32,
      "height": 64
    },
    "sprite_sheet_layout": "individual_files",
    "color_format": "RGBA",
    "export_formats": ["png", "spritesheet"]
  },

  "layer_definitions": {
    "description": "Defines rendering order and z-index for character parts. Lower values render first (background), higher values render last (foreground).",
    "layers": [
      {
        "id": "base_body",
        "name": "Base Body",
        "z_order": 0,
        "description": "Foundation layer - body shape and skin tone",
        "required": true
      },
      {
        "id": "body_markings",
        "name": "Body Markings",
        "z_order": 10,
        "description": "Tattoos, scars, or other body decorations",
        "required": false
      },
      {
        "id": "underwear",
        "name": "Underwear",
        "z_order": 20,
        "description": "Base undergarments",
        "required": false
      },
      {
        "id": "clothing_base",
        "name": "Base Clothing",
        "z_order": 30,
        "description": "Primary clothing layer (shirts, pants, dresses)",
        "required": false
      },
      {
        "id": "clothing_accessories",
        "name": "Clothing Accessories",
        "z_order": 40,
        "description": "Belts, pouches, straps",
        "required": false
      },
      {
        "id": "armor",
        "name": "Armor",
        "z_order": 50,
        "description": "Protective gear worn over clothing",
        "required": false
      },
      {
        "id": "back_accessory",
        "name": "Back Accessory",
        "z_order": 60,
        "description": "Capes, wings, backpacks (renders behind character)",
        "required": false
      },
      {
        "id": "hair_back",
        "name": "Hair (Back)",
        "z_order": 70,
        "description": "Hair that renders behind the head",
        "required": false
      },
      {
        "id": "face_base",
        "name": "Face Base",
        "z_order": 80,
        "description": "Facial features foundation",
        "required": true
      },
      {
        "id": "eyes",
        "name": "Eyes",
        "z_order": 90,
        "description": "Eye sprites with multiple expressions",
        "required": true
      },
      {
        "id": "facial_features",
        "name": "Facial Features",
        "z_order": 100,
        "description": "Nose, mouth, eyebrows",
        "required": false
      },
      {
        "id": "facial_hair",
        "name": "Facial Hair",
        "z_order": 110,
        "description": "Beards, mustaches",
        "required": false
      },
      {
        "id": "hair_front",
        "name": "Hair (Front)",
        "z_order": 120,
        "description": "Hair that renders in front of the head",
        "required": false
      },
      {
        "id": "head_accessory",
        "name": "Head Accessory",
        "z_order": 130,
        "description": "Hats, helmets, crowns, glasses",
        "required": false
      },
      {
        "id": "neck_accessory",
        "name": "Neck Accessory",
        "z_order": 140,
        "description": "Necklaces, scarves, amulets",
        "required": false
      },
      {
        "id": "hand_accessory_left",
        "name": "Left Hand Item",
        "z_order": 150,
        "description": "Shield, off-hand weapon, or item",
        "required": false
      },
      {
        "id": "hand_accessory_right",
        "name": "Right Hand Item",
        "z_order": 160,
        "description": "Primary weapon or held item",
        "required": false
      },
      {
        "id": "effects",
        "name": "Visual Effects",
        "z_order": 170,
        "description": "Auras, glows, particles",
        "required": false
      }
    ]
  },

  "color_customization": {
    "description": "Defines color zones that can be customized on character parts",
    "zones": {
      "primary": {
        "name": "Primary Color",
        "description": "Main color of the item (e.g., shirt color, armor base)",
        "default": "#FFFFFF"
      },
      "secondary": {
        "name": "Secondary Color",
        "description": "Accent color (e.g., trim, details)",
        "default": "#CCCCCC"
      },
      "tertiary": {
        "name": "Tertiary Color",
        "description": "Additional accent color for complex items",
        "default": "#999999"
      },
      "metal": {
        "name": "Metal Color",
        "description": "For armor, weapons, and metal accessories",
        "presets": ["#C0C0C0", "#FFD700", "#B87333", "#2C3539"],
        "preset_names": ["Silver", "Gold", "Bronze", "Dark Steel"]
      },
      "skin": {
        "name": "Skin Tone",
        "description": "Skin color for body parts",
        "presets": ["#FFDFC4", "#F0D5BE", "#EECEB3", "#E1B899", "#E5A073", "#C68642", "#8D5524", "#754C29", "#613D24"],
        "preset_names": ["Fair", "Light", "Light Medium", "Medium", "Tan", "Brown", "Dark Brown", "Deep Brown", "Very Deep"]
      },
      "hair": {
        "name": "Hair Color",
        "description": "Hair and facial hair color",
        "presets": ["#090806", "#2C222B", "#71635A", "#B7A69E", "#CABFB1", "#FFF5E1", "#E6C28A", "#CB9E6E", "#FFD700", "#FF6347", "#8B00FF"],
        "preset_names": ["Black", "Dark Brown", "Brown", "Light Brown", "Blonde", "Platinum", "Dirty Blonde", "Auburn", "Golden", "Red", "Fantasy Purple"]
      }
    }
  },

  "animation_support": {
    "description": "Defines how parts support animations",
    "standard_animations": [
      "idle",
      "walk",
      "run",
      "attack",
      "cast_spell",
      "hurt",
      "death",
      "jump"
    ],
    "frame_naming_convention": "{component_id}_{animation}_{frame_number}.png",
    "example": "knight_body_walk_01.png"
  },

